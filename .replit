entrypoint = "run.py"
modules = ["python-3.10", "bash"]

[nix]
channel = "stable-25_05"
packages = ["openssl"]

[deployment]
run = ["python", "run.py"]
deploymentTarget = "cloudrun"

[env]
PYTHONUNBUFFERED = "1"

[[ports]]
localPort = 3000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GhostList Bot"

[[workflows.workflow]]
name = "GhostList Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"

[workflows.workflow.metadata]
outputType = "console"
